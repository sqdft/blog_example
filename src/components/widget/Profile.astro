---
import { Icon } from "astro-icon/components";
import { profileConfig } from "../../config";
import { url } from "../../utils/url-utils";
import ImageWrapper from "../misc/ImageWrapper.astro";
import Typewriter from "./Typewriter.svelte";

const config = profileConfig;
---
<div class="card-base p-3">
    <a aria-label="Go to About Page" href={url('/about-privacy/')}
       class="group block relative mx-auto mt-1 lg:mx-0 lg:mt-0 mb-3
       max-w-[12rem] lg:max-w-none overflow-hidden rounded-xl active:scale-95">
        <div class="absolute transition pointer-events-none group-hover:bg-black/30 group-active:bg-black/50
        w-full h-full z-50 flex items-center justify-center">
            <Icon name="fa6-regular:address-card"
                  class="transition opacity-0 scale-90 group-hover:scale-100 group-hover:opacity-100 text-white text-5xl">
            </Icon>
        </div>
        <ImageWrapper src={config.avatar || ""} alt={config.name + " Profile Image"} class="mx-auto lg:w-full h-full lg:mt-0 "></ImageWrapper>
    </a>
    <div class="px-2">
        <div class="font-bold text-xl text-center mb-1 dark:text-neutral-50 transition">{config.name}</div>
        <div class="h-1 w-5 bg-[var(--primary)] mx-auto rounded-full mb-2 transition"></div>
        <div class="text-center mb-2.5 transition min-h-[3rem] flex items-center justify-center leading-6">
            <Typewriter client:load lines={config.bio} />
        </div>
        <div class="flex gap-2 justify-center mb-1">
            {config.links.length > 1 && config.links.map(item =>
                    <a rel="me" aria-label={item.name} href={item.url} target="_blank" class="btn-regular rounded-lg h-10 w-10 active:scale-90">
                        <Icon name={item.icon} class="text-[1.5rem]"></Icon>
                    </a>
            )}
            {config.links.length == 1 && <a rel="me" aria-label={config.links[0].name} href={config.links[0].url} target="_blank"
                                            class="btn-regular rounded-lg h-10 gap-2 px-3 font-bold active:scale-95">
                <Icon name={config.links[0].icon} class="text-[1.5rem]"></Icon>
                {config.links[0].name}
            </a>}
        </div>
        
        <!-- 全站访问量统计 -->
        <div class="mt-4 pt-4 border-t border-[var(--line-divider)]">
            <div class="flex items-center justify-center gap-1.5 mb-3">
                <Icon name="material-symbols:analytics-outline-rounded" class="text-[var(--primary)] text-base"></Icon>
                <span class="text-xs font-medium text-neutral-500 dark:text-neutral-400 uppercase tracking-wider">站点统计</span>
            </div>
            <div class="grid grid-cols-2 gap-3" id="site-stats-container">
                <!-- 浏览量卡片 -->
                <div class="group relative overflow-hidden p-3 rounded-xl 
                    bg-[var(--btn-regular-bg)] 
                    border border-[var(--line-divider)]
                    hover:border-[var(--primary)]
                    hover:shadow-md transition-all duration-300 ease-out">
                    <div class="relative z-10">
                        <div class="flex items-center gap-1.5 mb-1.5">
                            <div class="w-6 h-6 rounded-lg bg-[var(--card-bg)] flex items-center justify-center shadow-sm">
                                <Icon name="material-symbols:visibility-outline" class="text-[var(--primary)] text-sm"></Icon>
                            </div>
                            <span class="text-xs font-medium text-neutral-500 dark:text-neutral-400">浏览量</span>
                        </div>
                        <div class="flex items-baseline gap-1">
                            <span id="busuanzi_value_site_pv" class="text-xl font-bold text-[var(--primary)] stats-number">-</span>
                            <span class="text-[10px] text-neutral-400">PV</span>
                        </div>
                    </div>
                    <!-- 装饰背景 -->
                    <div class="absolute -right-4 -top-4 w-16 h-16 bg-[var(--primary)] opacity-5 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-500"></div>
                </div>

                <!-- 访客数卡片 -->
                <div class="group relative overflow-hidden p-3 rounded-xl 
                    bg-[var(--btn-regular-bg)] 
                    border border-[var(--line-divider)]
                    hover:border-[var(--primary)]
                    hover:shadow-md transition-all duration-300 ease-out">
                    <div class="relative z-10">
                        <div class="flex items-center gap-1.5 mb-1.5">
                            <div class="w-6 h-6 rounded-lg bg-[var(--card-bg)] flex items-center justify-center shadow-sm">
                                <Icon name="material-symbols:person-outline" class="text-[var(--primary)] text-sm"></Icon>
                            </div>
                            <span class="text-xs font-medium text-neutral-500 dark:text-neutral-400">访客数</span>
                        </div>
                        <div class="flex items-baseline gap-1">
                            <span id="busuanzi_value_site_uv" class="text-xl font-bold text-[var(--primary)] stats-number">-</span>
                            <span class="text-[10px] text-neutral-400">UV</span>
                        </div>
                    </div>
                    <!-- 装饰背景 -->
                    <div class="absolute -right-4 -top-4 w-16 h-16 bg-[var(--primary)] opacity-5 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-500"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* 数字加载动画 */
    .stats-number {
        min-width: 2.5rem;
        display: inline-block;
        font-feature-settings: "tnum";
    }
    
    @keyframes countUp {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .stats-loaded {
        animation: countUp 0.6s ease-out;
    }
</style>

<style>
    /* 数字加载动画 */
    .stats-number {
        min-width: 2.5rem;
        display: inline-block;
        font-feature-settings: "tnum";
    }
    
    @keyframes countUp {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .stats-loaded {
        animation: countUp 0.4s ease-out forwards;
    }
    
    /* 骨架屏闪烁效果 */
    @keyframes shimmer {
        0% {
            background-position: -200% 0;
        }
        100% {
            background-position: 200% 0;
        }
    }
    
    .stats-number:not(.stats-loaded) {
        background: linear-gradient(90deg, 
            var(--btn-content) 25%, 
            var(--card-bg) 50%, 
            var(--btn-content) 75%);
        background-size: 200% 100%;
        animation: shimmer 1.5s infinite;
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        opacity: 0.5;
    }
</style>

<script>
    // 不蒜子统计会自动更新数据，无需手动获取
    // 这里只保留一些基础的动画效果
    
    document.addEventListener('DOMContentLoaded', function() {
        // 为统计数字添加加载完成的样式
        setTimeout(() => {
            const statsElements = document.querySelectorAll('.stats-number');
            statsElements.forEach(el => {
                el.classList.add('stats-loaded');
            });
        }, 2000); // 给不蒜子脚本一些时间加载
    });
</script>

